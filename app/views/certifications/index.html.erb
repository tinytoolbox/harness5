<h1>Listing certifications</h1>

<table>
  <thead>
    <tr>
      <th>Certification name</th>
      <th>Certification type</th>
      <th>Certification provider</th>
      <th>Certification issued</th>
      <th>Certification expiry</th>
      <th>Certification description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @certifications.each do |certification| %>
      <tr>
        <td><%= certification.certification_name %></td>
        <td><%= certification.certification_type %></td>
        <td><%= certification.certification_provider %></td>
        <td><%= certification.certification_issued %></td>
        <td><%= certification.certification_expiry %></td>
        <td><%= certification.certification_description %></td>
        <td><%= certification.user %></td>
        <td><%= link_to 'Show', certification %></td>
        <td><%= link_to 'Edit', edit_certification_path(certification) %></td>
        <td><%= link_to 'Destroy', certification, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

