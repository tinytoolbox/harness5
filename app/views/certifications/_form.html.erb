<%= simple_form_for(@certification) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :certification_name %>
    <%= f.input :certification_type %>
    <%= f.input :certification_provider %>
    <%= f.input :certification_issued %>
    <%= f.input :certification_expiry %>
    <%= f.input :certification_description %>
    <%= f.association :user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
