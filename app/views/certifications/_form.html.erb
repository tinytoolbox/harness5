<%= form_for @certification, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :certification_name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :certification_name, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :certification_type, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :certification_type, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :certification_provider, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :certification_provider, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :certification_issued, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.date_select :certification_issued, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :certification_expiry, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.date_select :certification_expiry, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :certification_description, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :certification_description, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  certifications_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
